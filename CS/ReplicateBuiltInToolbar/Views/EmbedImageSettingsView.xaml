<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dx="http://schemas.devexpress.com/maui"
    xmlns:local="clr-namespace:HtmlEditToolbarCustomization" x:Class="HtmlEditToolbarCustomization.EmbedImageSettingsView">
    <ContentView.Resources>
        <Style TargetType="dx:FormItem">
            <Setter Property="HorizontalSpacing" Value="16"/>
            <Setter Property="AllowTap" Value="true"/>
            <Setter Property="Padding" Value="16,10"/>
        </Style>
    </ContentView.Resources>
    <ContentView.Content>
        <dx:DXStackLayout>
            <dx:FormItem ImageSource="dxre_photo" InlineContent="{dx:HtmlEditLocalizer Id=InsertImage_TakePhoto}" TapCommand="{Binding ShowPhotoPickerCommand}" />
            <dx:FormItem ImageSource="dxre_picture" InlineContent="{dx:HtmlEditLocalizer Id=InsertImage_UploadFromLibrary}" TapCommand="{Binding ShowImagePickerCommand}" />
        </dx:DXStackLayout>
    </ContentView.Content>
</ContentView>
